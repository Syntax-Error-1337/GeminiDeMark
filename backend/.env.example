PORT=5000
DB_HOST=localhost
DB_USER=root
DB_PASS=password
DB_NAME=watermark_db
JWT_SECRET=your_super_secret_jwt_key
APP_BASE_URL=http://localhost:5000

# Email Configuration
# Options: 'smtp', 'ses', 'sendgrid'
EMAIL_PROVIDER=smtp
FROM_EMAIL=verify@yourdomain.com

# Verification Toggle
# If true, users successfully registered will have isVerified=false and must verify email.
# If false, isVerified=true immediately.
REQUIRE_EMAIL_VERIFICATION=false

# 1. SMTP Configuration (Default)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=password

# 2. AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# 3. SendGrid Configuration (Legacy)
SENDGRID_API_KEY=SG.placeholder_key
SENDGRID_FROM_EMAIL=verify@yourdomain.com
